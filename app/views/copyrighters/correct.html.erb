<% provide(:title, 'Заказы на корректировке') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active">Заказы на корректировке</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

  <section>
      <div class="container">
        <div class="row">
<%= render "/shared/whatmenu" %>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-12">
                <h1>Заказы на корректировке</h1>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">
                    <% if @posts.count > 0 %>
               <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Наименование</th>
                      <th>Дата заказа</th>
                      <th>Стоимость</th>
                      <th>Выполнение</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @posts.each do |post| %>
                      <tr>
                        <td><%= post.id %></td>
                        <td><%= link_to post.order.name, project_order_path(post.order.project, post.order) %></td>
                        <td><%= Russian::strftime(post.order.finish_date, "%d %B %Y") %></td>
                        <td><%= price_is(post.order.amount) %> руб.</td>
                        <td><%= percentage(post) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <% else %>
                <strong>У Вас нет заказов на корректировке.</strong>
                <% end %>
                  </div>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>
    </section>