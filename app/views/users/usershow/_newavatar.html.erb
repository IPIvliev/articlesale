<!-- modal dialog -->
<div class="modal fade" id="0" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header"><!-- modal header -->
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Изменить аватар</h4>
      </div><!-- /modal header -->

      <!-- modal body -->
      <div class="modal-body">
        <%= form_for @user, :url => {:action => "edit_avatar"} do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label><strong>Ваш аватар:</strong></label>
              <%= image_tag @user.avatar.url %>
              <%= f.file_field :avatar, :class => "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <%= f.submit :value => "Отправить", :class => "btn btn-lg btn-success" %>
          </div>
        </div>
      </div>

      <% end %>
    </div>
    <!-- /modal body -->

  </div>
</div>
