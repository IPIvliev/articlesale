<% provide(:title, 'Выполненные заказы') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active">Статистика</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

  <section>
      <div class="container">
        <div class="row">
<%= render "leftmenu" %>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-12">
                <h1>Вопросы пользователей</h1>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">
                    <table class="table table-bordered">
                      <thead>

                        <tr>
                          <th>Имя</th>
                          <th>Текст</th>
                          <th>E-mail</th>
                          <th>Дата</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @questions.each do |question| %>
                          <tr>
                          <td><%= question.name %></td>
                          <td><%= question.text %></td>
                          <td><%= question.email %></td>
                          <td><%= Russian::strftime(question.created_at, "%d %B %Y %H:%M") %></td>
                          </tr>
                        <% end %>
                      <tbody>
                    </table>
                  </div>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>
    </section>