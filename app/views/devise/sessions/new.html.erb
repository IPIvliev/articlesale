<% provide(:title, 'Регистрация для заказчиков контента') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/index.html">Главная</a></li>
      <li class="active">Регистрация для заказчиков</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->
    <section>
      <div class="container">
      	  <%= devise_error_messages! %>
        <h1>Регистрация на бирже текстов</h1>
        <div class="row">
          <div class="col-sm-7 col-md-offset-1 col-md-6">
            <div class="thumbnail info-thumbnail background-lead">
              <div class="caption">
                <h3><span class="fa fa-user"></span> Регистрация</h3>
<%= form_for(:user, :url => registration_path(:user)) do |f| %>
                  <div class="form-group">
                    <label>Логин</label>
                    <%= f.text_field :username, :class => "form-control", :placeholder => "Введите логин" %>
                    
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail13">Email</label>
                    <%= f.email_field :email, :class => "form-control", :placeholder => "Ваша электронная почта" %>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputPassword13">Вы заказчик или копирайтер?</label>
                    <div class="radio">
                      <%= f.radio_button(:role, "client") %>
                      <%= f.label(:role, "Заказчик") %>
                    </div>
                    <div class="radio">
                      <%= f.radio_button(:role, "copy") %>
                      <%= f.label(:role, "Копирайтер") %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputPassword13">Пароль</label>
                    <%= f.password_field :password, :class => "form-control", :placeholder => "Введите пароль" %>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword23">Проверка соответствия пароля</label>
                    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Введите пароль ещё раз" %>
                  </div>
                  <button type="submit" class="btn btn-default">Регистрация</button>
                <% end %>

              </div>
            </div>
          </div>
          <div class="col-sm-5 col-md-4">
            <div class="thumbnail info-thumbnail background-emerald">
              <div class="caption">
                <h3><span class="fa fa-user"></span> Логин</h3>
                <%= form_for("user", :url => user_session_path) do |f| %>
                  <div class="form-group">
                    <label for="exampleInputEmail3">Email</label>
                    <%= f.email_field :email, :class => "form-control", :placeholder => "Ваша электронная почта" %>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword3">Пароль</label>
                    <%= f.password_field :password, :class => "form-control", :placeholder => "Ваш пароль" %>
                  </div>
                <div class="form-group">
                  <label>
                  	<%= link_to "Забыли пароль?", new_password_path('user') %>
                  </label>
              	</div>
                  <div class="checkbox">
                    <label>
                      Запомнить меня <%= f.check_box :remember_me %>
                    </label>
                  </div>
                  <%= f.submit 'Войти', :class => "btn btn-default" %>
                <% end %>

              </div>
            </div>
          </div>

        </div>
      </div>
    </section>