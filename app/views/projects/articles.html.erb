<% provide(:title, 'Спиосок копирайтеров') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active">Список копирайтеров</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

  <section>
      <div class="container">
        <div class="row">
          <%= render "shared/whatmenu" %>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-12">
                <h1>Готовые статьи</h1>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">
                    <form class="form-horizontal" role="form">
                      <div class="form-group">
                        <lable><strong>Фильтр по категориям</strong></lable>
                        <select multiple class="form-control">
                          <option>Автомобили</option>
                          <option>Велосипеды</option>
                          <option>Компьютеры</option>
                          <option>Креатив</option>
                          <option>Строительство</option>
                        </select>
                      </div>
                      <button type="submit" class="btn btn-primary">Выбрать</button>
                    </form>


                  </div>
                </div>
                <br>

                <% @posts.each do |post| %>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">

                    <table class="table table-bordered">
                      <thead>
                        <h4><%= post.name %></h4>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= post.text.gsub(/\s+/, '').length %> символов</td>
                          <td><%= link_to post.user.username, post.user %></td>
                          <td><%= post.sale %> рублей</td>
                          <td><%= post.category %></td>
                        </tr>
                      </tbody>
                    </table>
                    <p><%= truncate( raw( sanitize(post.text, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 130, :omission => "...") %></p>
                    <p><a href="#" class="btn btn-success" style="float: right; display: inline;">Купить</a></p><br>
                  </div>
                </div>
                <div class="space-20"></div>
                <% end %>



              </div>
            </div>
          </div>
        </div>
      </div>
    </section>