<% provide(:title, 'Заказы на корректировке') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active">Заказы на корректировке</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

  <section>
      <div class="container">
        <div class="row">
<%= render "/shared/whatmenu" %>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-12">
                <h1>Заказы на корректировке</h1>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Наименование</th>
            <th>Автор</th>
            <th>Дата заказа</th>
            <th>Стоимость</th>
            <th>Выполнение</th>
            <th>Оригинальность</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td><%= link_to "<strong>Статья:</strong> #{order.post.name}".html_safe, project_order_path(order.project, order) %><p><strong>Заказ:</strong> <%= order.name %></p></td>
              <td><%= link_to order.post.user.username, order.post.user %>
              <td><%= Russian::strftime(order.finish_date, "%d %B %Y") %></td>
              <td><%= price_is(order.amount) %> руб.</td>
              <td><%= percentage(order.post) %></td>
              <td><%= order.post.origin %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>

                  </div>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>
    </section>