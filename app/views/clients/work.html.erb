<% provide(:title, 'Заказы в работе') %>

<!-- Breadcrumbs - START -->
<div class="background-clouds breadcrumbs-container">
  <div class="container">
    <ol class="breadcrumb">
      <li class="active">Заказы в работе</li>
    </ol>
  </div>
</div>
<!-- Breadcrumbs - END -->

  <section>
      <div class="container">
        <div class="row">
<%= render "/shared/whatmenu" %>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-12">
                <h1>Заказы в работе</h1>
                <div class="thumbnail info-thumbnail padding1 background-clouds color-black">
                  <div class="caption background-white">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Наименование</th>
            <th>Проект</th>
            <th>Стоимость</th>
            <th>Автор</th>
            <th>Выполнение заказа</th>
            <th>Статус</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= link_to order.name, project_order_url(order.project, order) %></td>
            <td><%= link_to order.project.name, order.project %></td>
            <td><%= price_is(order.amount) %></td>
            <td><%= order.post.user.username %></td>
            <td><%= Russian::strftime(order.finish_date, "%d %B %Y") %></td>
            <td><%= percentage(order.post) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

                  </div>
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>
    </section>