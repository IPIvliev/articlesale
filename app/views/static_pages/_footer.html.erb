    <footer class="background-dark-gray color-white">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h3>Меню</h3>
            <ul class="nav-footer">
              <li><a href="/index.html">Главная</a></li>
              <li><a href="/about.html">О бирже</a></li>
              <li><a href="/copyrighters.html">Для копирайтеров</a></li>
              <li><a href="/clients.html">Для заказчиков</a></li>
              <li><a href="/articles.html">Статьи</a></li>
              <li><a href="/help.html">Справка</a></li>
            </ul>
          </div>
          <div class="col-md-4">
            <h3>Новости</h3>
              <% Article.order("created_at DESC").limit(3).each do |article| %>
            <p class="testimonial">
              <%= link_to truncate( raw( sanitize(article.text, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 120, :omission => "..."), article %>
            </p>
            <%= link_to "<p class='author'> #{article.user.username}</p>".html_safe, article.user if !article.user.nil? %>
              <% end %>
          </div>
          <div class="col-md-5">
            <h3>Задать вопрос</h3>
            <%= form_for Question.new, :url => {:controller => "admins", :action => "new_question"}, :class => "form-horizontal", :role => "form" do |f| %>
              <div class="form-group">
                <label for="inputName1" class="col-lg-3 control-label">Имя</label>
                <div class="col-lg-9">
                  <%= f.text_field :name, :class => "form-control input-lg", :placeholder => "Ваше имя" %>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail1" class="col-lg-3 control-label">Email</label>
                <div class="col-lg-9">
                  <%= f.email_field :email, :class => "form-control input-lg", :placeholder => "Email" %> 
                </div>
              </div>
              <br><br>
              <div class="form-group">
                <label for="inputContent1" class="col-lg-3 control-label">Текст</label>
                <div class="col-lg-9">
                  <%= f.text_area :text, :class => "form-control", :rows => 3, :placeholder => "Текст вопроса" %> 
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                  <button type="submit" class="btn btn-lead btn-lg">Отправить</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <hr>
